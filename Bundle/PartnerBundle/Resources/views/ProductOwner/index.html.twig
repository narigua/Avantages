{% extends "AvantagesPartnerBundle::basepartner.html.twig" %}

{% block body %}

{{ parent() }}

<div class="page-header">
    <h1>{% trans %}ProductOwner List{% endtrans %}</h1>
</div>

<p>
    {{ pagerfanta(pager, 'twitter_bootstrap') }}
</p>


<table class="table table-bordered table-striped table-condensed records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Postcode</th>
            <th>City</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Mail</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
        <tr>
            <td><a href="{{ path('partner_productowner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.address }}</td>
            <td>{{ entity.postCode }}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.country }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.mail }}</td>
        <td>
                    <a class="btn btn-block" href="{{ path('partner_productowner_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
                </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock body %}
