{% extends "AvantagesPartnerBundle::basepartner.html.twig" %}

{% block body %}

{{ parent() }}

<div class="page-header">
    <h1>{% trans %}Category List{% endtrans %}</h1>
</div>

<p>
    {{ pagerfanta(pager, 'twitter_bootstrap') }}
</p>


<table class="table table-bordered table-striped table-condensed records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Color</th>
            <th>Level</th>
            <th>Tree</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
        <tr>
            <td><a href="{{ path('partner_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.color }}</td>
            <td>{{ entity.level }}</td>
            <td>{{ entity.tree }}</td>
        <td>
                    <a class="btn btn-block" href="{{ path('partner_category_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
                </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock body %}
