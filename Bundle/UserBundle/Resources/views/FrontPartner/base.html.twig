{% extends "::base.html.twig" %}

{% block title %}Avantages Partenaire{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset("bootstrap/css/bootstrap.css") }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset("bootstrap/css/bootstrap-responsive.css") }}" />
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('css/partner.css') }}" />
{% endblock %}

{% block body %}
<div id="wrap">
	<div class="navbar navbar-inverse">
	  <div class="navbar-inner">
	    <a class="brand" href="{{ path('partner') }}">Avantages partenaire</a>
	    <ul class="nav">
	    	<li><a href="{{ path('partner_condition') }}">Conditions</a></li>
	    	<li><a href="{{ path('partner_new') }}">Devenir Partenaire</a></li>
	      <li class="dropdown">
	        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	          {% trans %}Catalogue{% endtrans %}
	          <b class="caret"></b>
	        </a>
	        <ul class="dropdown-menu">
	            <li><a href="{{ path('partner_product_new') }}">Créer un produit</a></li>
	            <li><a href="{{ path('partner_product_list') }}">Liste de mes produits</a></li>
	        </ul>
	      </li>
	      <li class="dropdown">
	        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	          Mon compte
	          <b class="caret"></b>
	        </a>
	        <ul class="dropdown-menu">
	        	<li><a href="#">Mes coordonnées</a></li>
	            <li><a href="{{ path('fos_user_security_logout') }}">Se déconnecter</a></li>
	        </ul>
	      </li>
	    </ul>
	    <form class="navbar-search pull-right">
	      <input class="span2 search-query" type="text" placeholder="Rechercher…" data-provide="typeahead">
	    </form>
	  </div>
	</div>
	{% block breadcrumb %}{% endblock %}

	{% for flashMessage in app.session.flashbag.get('info') %}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ flashMessage }}
        </div>
    {% endfor %}
    
	{% block content %}{% endblock %}
<div id="push"></div>
</div>
<div id="footer">
	<div class="container container-inverse">
		<p>&copy; <a href="http://avantages.fr">Avantages</a>, 2013 - {{ 'now'|date('Y') }}.</p>
	</div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset("bootstrap/js/bootstrap.js") }}"></script>
{% endblock %}